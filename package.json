{
	"name": "react-learn",
	"version": "1.0.0",
	"description": "使用webpack5从零搭建完整的react18+ts构建环境",
	"main": "index.js",
	"scripts": {
		"prepare": "husky install",
		"commit": "git add . && git cz",
		"commit-no-verify": "git add . && git cz ",
		"lint:eslint": "eslint --ext .js,.ts,.tsx ./src",
		"fix": "prettier -w --loglevel warn \"src/**/*.{js,ts,json,tsx,css,less,scss,html,md}\"",
		"lint:stylelint": "stylelint \"**/*.{less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
		"lint:lint-staged": "lint-staged",
		"devVite": "vite",
		"dev": "cross-env NODE_ENV=development BASE_ENV=development webpack-dev-server -c build/webpack.dev.js",
		"dev:test": "cross-env NODE_ENV=development BASE_ENV=test webpack-dev-server -c build/webpack.dev.js",
		"dev:pre": "cross-env NODE_ENV=development BASE_ENV=pre webpack-dev-server -c build/webpack.dev.js",
		"dev:prod": "cross-env NODE_ENV=development BASE_ENV=production webpack-dev-server -c build/webpack.dev.js",
		"build:dev": "cross-env NODE_ENV=production BASE_ENV=development webpack -c build/webpack.prod.js",
		"build:test": "cross-env NODE_ENV=production BASE_ENV=test webpack -c build/webpack.prod.js",
		"build:pre": "cross-env NODE_ENV=production BASE_ENV=pre webpack -c build/webpack.prod.js",
		"build": "cross-env NODE_ENV=production BASE_ENV=production webpack -c build/webpack.prod.js",
		"build:vite": "vite build",
		"analy": "cross-env NODE_ENV=production BASE_ENV=production webpack -c build/webpack.analy.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/guojiongwei/react-learn.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/guojiongwei/react-learn/issues"
	},
	"homepage": "https://github.com/guojiongwei/react-learn#readme",
	"devDependencies": {
		"@babel/core": "^7.18.2",
		"@babel/plugin-proposal-decorators": "^7.18.10",
		"@babel/plugin-transform-runtime": "^7.18.5",
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-react": "^7.17.12",
		"@babel/preset-typescript": "^7.17.12",
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
		"@types/react": "^18.0.12",
		"@types/react-dom": "^18.0.5",
		"@types/react-router-dom": "^5.3.3",
